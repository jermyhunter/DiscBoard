<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.FeedbackFragment">
    <TextView
        android:layout_marginStart="@dimen/btn_margin_single_gap"
        android:layout_marginTop="@dimen/btn_margin_single_gap"
        android:layout_gravity="top|start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/bold"
        android:textSize="17sp"
        android:textColor="@color/btn_bg_highlight_color"
        android:text="本应用使用免费\n请审慎对待任意付费获取来源" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        tools:ignore="UselessParent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/bold"
            android:textSize="20sp"
            android:textColor="@color/btn_bg_highlight_color"
            android:text="较新机型的导出功能可能会失效" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="严重bug请联系qq479395433" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="（暂时不计划开发新功能）" />
        <Button
            android:id="@+id/copy_contact_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:text="复制联系方式" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="↓支持开发者↓" />
        <Button
            android:id="@+id/copy_url_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="复制链接" />
    </LinearLayout>
    <TextView
        android:layout_marginEnd="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:layout_gravity="bottom|end"
        android:text="本应用部分内容参考自 ultiplays\n网页版请使用 https://www.ultiplays.com" />
    <TextView
        android:id="@+id/ver_info_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/btn_margin_single_gap"
        android:textSize="13sp"
        android:layout_gravity="bottom|start" />
</FrameLayout>