<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:ignore="MissingDefaultResource">

    <LinearLayout
        android:id="@+id/buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/add_dot_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="add dot" />

        <ToggleButton
            android:id="@+id/swap_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textOff="offense"
            android:textOn="defense" />

        <View
            android:id="@+id/splitter_full"
            android:layout_width="10dp"
            android:layout_height="match_parent"
            android:background="@color/teal"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="3dp"/>

        <Button
            android:id="@+id/save_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="保存模板" />

        <Button
            android:id="@+id/reset_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/IndianRed"
            android:text="重置" />

        <Button
            android:id="@+id/default_temp_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text= "我的模板" />

        <Button
            android:id="@+id/three_player_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="三人" />

        <Button
            android:id="@+id/five_player_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="五人" />

        <Button
            android:id="@+id/seven_player_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="七人" />

    </LinearLayout>

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="?android:attr/listDivider" />

    <com.example.discboard.views.DiscBoard
        android:id="@+id/disc_board"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/disc_space" />
</LinearLayout>